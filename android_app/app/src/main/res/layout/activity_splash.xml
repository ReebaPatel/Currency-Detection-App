<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED791C"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="426dp"
        android:layout_height="157dp"
        android:contentDescription="App Logo"
        android:src="@mipmap/logo"
        app:srcCompat="@drawable/chatgpt_image_mar_31__2025__02_25_26_pm"
        tools:srcCompat="@drawable/chatgpt_image_mar_31__2025__02_25_26_pm" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="389dp"
        android:layout_height="163dp"
        android:layout_margin="@dimen/material_emphasis_medium"
        android:fontFamily="@font/andika_bold"
        android:paddingTop="20dp"
        android:text="Welcome to Paisa Pehchan App"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold" />
</LinearLayout>
